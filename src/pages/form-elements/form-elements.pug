extends ../base/base-ui

include ../../components/text-field/text-field
include ../../components/dropdown/dropdown
include ../../components/masked-text-field/masked-text-field
include ../../components/calendar/calendar
include ../../components/subscription/subscription
include ../../components/checkbox-list/checkbox-list
include ../../components/radio-button/radio-button
include ../../components/toggle/toggle
include ../../components/like-button/like-button
include ../../components/rate-button/rate-button
include ../../components/range-slider/range-slider
include ../../components/button/button
include ../../components/text-button/text-button
include ../../components/pagination/pagination
include ../../components/dropdown/dropdown
include ../../components/expandable-checkbox/expandable-checkbox
include ../../components/rich-checkbox/rich-checkbox
include ../../components/bullet-list/bullet-list
include ../../components/room-info/room-info
include ../../components/comment/comment

block title 
  |Form elements

block main
  .form-elements__container
    .form-elements__primary-grid
      .form-elements__primary-grid__column1
        .form-elements__email
          +text-field("Email", "text field")

        .form-elements__awersome
          +text-field("This is pretty awesome", "text field")

        .form-elements__dropdown-guests_closed
          +dropdown({title: "гости", rooms: false, initial: "closed"})
        
        .form-elements__masked
          +masked-text-field("masked text field")

        .form-elements__calendar_separate
          +calendar("separate", "date dropdown", "date dropdown")

        .form-elements__calendar_filter
          +calendar("filter", "filter date dropdown")

        .form-elements__subscription
          +subscription("subscription text field")

        
      .form-elements__primary-grid__column2

        .form-elements__checkbox-list
          +checkbox-list("checkbox buttons")

        .form-elements__radio
          +radio-button("radio buttons")

        .form-elements__toggle-wrapper 
          h3.form-elements__toggle-title 
            |toggle
          .form-elements__toggle_checked
            +toggle("Получать спецпредложения", true)
          +toggle("Получать спецпредложения", false)

        .form-elements__like-wrapper
          h3.form-elements__like-title
            |like button
          .form-elements__like
            +like-button
            +like-button(12)

        .form-elements__rate-wrapper
          h3.form-elements__rate-title
            |rate button
          .form-elements__rate
            +rate-button(4)
            +rate-button(5)
        
      .form-elements__primary-grid__column3

        .form-elements__range-slider
          +range-slider("range slider")

        h3.form-elements__buttons-title
          |buttons
        .form-elements__buttons_fill_full
          +button({fill:"full", title: "click me"})
          +button({fill:"full", title: "click me"})

        .form-elements__buttons_fill_empty
          +button({fill:"empty", title: "click me"})
          +button({fill:"empty", title: "click me"})

        .form-elements__text-buttons
          +text-button("click me")
          +text-button("click me")
        
        .form-elements__button_fill_arrow
          +button({fill:"arrow", title: "перейти к оплате"})

        .form-elements__pagination
          h3.form-elements__pagination-title
            |pagination
          +pagination
      
        
      
      .form-elements__secondary-grid
        .form-elements__secondary-grid__column1
          .form-elements__dropdown_style_rooms_closed
            +dropdown({title: "dropdown", rooms: true, initial: "closed"})
          .form-elements__dropdown_style_rooms_open
            +dropdown({title: "dropdown", rooms: true, initial: "open"})
          
          .form-elements__expandable_closed
            +expandable-checkbox({title:"expandable checkbox list", condition: false})
          .form-elements__expandable_open
            +expandable-checkbox({title:"expandable checkbox list", condition: true})
          .form-elements__room-info
            +room-info({walls: true, window: true, fire: false})
          
        .form-elements__secondary-grid__column2 
          .form-elements__dropdown-guests_open
            +dropdown({title: "dropdown", rooms: false, initial: "open"})

          .form-elements__rich-checkbox
            +rich-checkbox("rich checkbox buttons")
          
        .form-elements__secondary-grid__column3
          .form-elements__dropdown_style_guests_open
            +dropdown({title: "dropdown", rooms: false, initial: "open"})
          .form-elements__bullet-list
            h3.form-elements__bullet-list__title
              |bullet list
            +bullet-list(["Нельзя с питомцами","Без вечеринок и мероприятий","Время прибытия — после 13:00, а выезд до 12:00"])
        .form-elements__comment
          +comment({img:"murad.jpg",name:"Мурад Сарафанов",when:"5 дней", likes: 12,text:"Великолепный матрас на кровати в основной спальне! А пуфик вообще потрясающий. И стены, действительно, шумоподавляющие. Выкрикивал комплименты повару — никто не жаловался из соседей."})


