extends ../base/base-ui

include ../../components/text-field/text-field
include ../../components/dropdown/dropdown
include ../../components/masked-text-field/masked-text-field
include ../../components/calendar/calendar
include ../../components/subscription/subscription
include ../../components/checkbox-list/checkbox-list
include ../../components/radio-button/radio-button
include ../../components/toggle/toggle
include ../../components/like-button/like-button
include ../../components/rate-button/rate-button
include ../../components/range-slider/range-slider
include ../../components/button/button
include ../../components/text-button/text-button
include ../../components/pagination/pagination
include ../../components/dropdown/dropdown
include ../../components/expandable-checkbox/expandable-checkbox
include ../../components/rich-checkbox/rich-checkbox
include ../../components/bullet-list/bullet-list
include ../../components/room-info/room-info
include ../../components/comment/comment

block title 
  |Form elements

block main
  .form-elements
    .form-elements__primary-grid
      .form-elements__primary-grid-column1
        .form-elements__email
          +text-field({placeholder: "Email", title: "text field"})

        .form-elements__awersome
          +text-field({placeholder: "This is pretty awesome", title: "text field"})

        .form-elements__dropdown_content_guest-composition
          +dropdown({title: "dropdown", content: "guest-composition", initial: "closed"})
        
        .form-elements__masked
          +masked-text-field({title: "masked text field"})

        .form-elements__calendar_separate
          +calendar({ type: "separate", title: "date dropdown", titleExtra: "date dropdown"})

        .form-elements__calendar_filter
          +calendar({ type: "filter", title: "filter date dropdown"})

        .form-elements__subscription
          h3.form-elements__subscription-title
            |subscription text field
          +subscription

        
      .form-elements__primary-grid-column2

        .form-elements__checkbox-list
          +checkbox-list({ title: "checkbox buttons"})

        .form-elements__radio
          h3.form-elements__radio-title 
            |radio buttons
          +radio-button("radio buttons")

        .form-elements__toggle-wrapper 
          h3.form-elements__toggle-title 
            |toggle
          .form-elements__toggle_checked
            +toggle({title: "Получать спецпредложения", checked: true})
          +toggle({title: "Получать спецпредложения", checked: false})

        .form-elements__like-wrapper
          h3.form-elements__like-title
            |like button
          .form-elements__like
            +like-button({number: 2})
            +like-button({number: 12})

        .form-elements__rate-wrapper
          h3.form-elements__rate-title
            |rate button
          .form-elements__rate
            +rate-button(4)
            +rate-button(5)
        
      .form-elements__primary-grid-column3

        .form-elements__range-slider
          +range-slider("range slider")

        h3.form-elements__buttons-title
          |buttons
        .form-elements__filled-buttons
          +button({themeModifier:"filled", title: "click me"})
          +button({themeModifier:"filled", title: "click me"})

        .form-elements__bordered-buttons
          +button({themeModifier:"bordered", title: "click me"})
          +button({themeModifier:"bordered", title: "click me"})

        .form-elements__text-buttons
          +text-button({title: "click me"})
          +text-button({title: "click me"})
        
        .form-elements__arrow-button
          +button({themeModifier:"arrow", title: "перейти к оплате"})

        .form-elements__pagination
          h3.form-elements__pagination-title
            |pagination
          +pagination
      
        
      
      .form-elements__secondary-grid
        .form-elements__secondary-grid-column1
          .form-elements__dropdown_content_room-composition_closed
            +dropdown({title: "dropdown", content: "room-composition", initial: "closed"})
          .form-elements__dropdown_content_room-composition_open
            +dropdown({title: "dropdown", content: "room-composition", initial: "open"})
          
          .form-elements__expandable-checkbox_closed
            +expandable-checkbox({title:"expandable checkbox list", condition: false})
          .form-elements__expandable-checkbox_open
            +expandable-checkbox({title:"expandable checkbox list", condition: true})
          .form-elements__room-info
            +room-info({walls: true, window: true, fire: false})
          
        .form-elements__secondary-grid-column2 
          +dropdown({title: "dropdown", content: "guest-composition", initial: "open"})

          .form-elements__rich-checkbox
            +rich-checkbox("rich checkbox buttons")
          
        .form-elements__secondary-grid-column3
          .form-elements__dropdown_content_guest-composition_open
            +dropdown({title: "dropdown", content: "guest-composition", initial: "open"})
          .form-elements__bullet-list
            h3.form-elements__bullet-list-title
              |bullet list
            +bullet-list(["Нельзя с питомцами","Без вечеринок и мероприятий","Время прибытия — после 13:00, а выезд до 12:00"])
        .form-elements__comment
          +comment({img:"murad.jpg",name:"Мурад Сарафанов",when:"5 дней", likes: 12,text:"Великолепный матрас на кровати в основной спальне! А пуфик вообще потрясающий. И стены, действительно, шумоподавляющие. Выкрикивал комплименты повару — никто не жаловался из соседей."})


