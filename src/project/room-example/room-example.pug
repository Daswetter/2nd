
mixin room-example(options)
  .room-example
    .room-example__photo
      img(src=options.img width='100%' alt='photo')
    .room-example__inner
      .room-example__descr
        .room-example__flex-start
          h1.room-example__number-mark.
            №
          h1.room-example__number=options.number
          if options.lux
            h3.room-example__class.
              люкс

        .room-example__flex-start
          p.room-example__price=options.price
          p.room-example__rouble.
            ₽
          p.room-example__text.
            в сутки

      .room-example__border

      .room-example__feedback
        include ../../blocks/rate-button/rate-button.pug
        +rate-button(5)
        .room-example__flex-start
          p.room-example__comments-number=options.comments
          p.room-example__comments.
            Отзывов

