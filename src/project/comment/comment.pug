mixin comment(options)
  .comment
    .comment__photo-like
      img(src=options.img, alt="photo" class="comment__photo")
      .comment__like
        include ../../blocks/like-button/like-button
    .comment__text
      .comment__name=options.name
      .comment__when=options.when+' '+'назад'
      .comment__review=options.text

