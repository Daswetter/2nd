include ../expandable-checkbox/expandable-checkbox
include ../calendar/calendar
include ../dropdown/dropdown
include ../range-slider/range-slider
include ../checkbox-list/checkbox-list
include ../rich-checkbox/rich-checkbox
include ../dropdown/dropdown
mixin sidebar
  form
    .sidebar
      .sidebar__calendar_filter
        +calendar({ type: "filter", title: "даты пребывания в отеле"})
      .sidebar__dropdown_style_guests
        +dropdown({title: "гости", content: "guest-composition", initial: "closed"})
      .sidebar__range-slider
        +range-slider("диапазон цены")
        p.sidebar__range-slider__info.
          Стоимость за сутки пребывания в номере
      .sidebar__checkbox-list
          +checkbox-list({ title: "правила дома"})
      .sidebar__rich-checkbox-list
        +rich-checkbox("доступность")
      .sidebar__dropdown_style_rooms
        +dropdown({title: "удобства номера", content: "room-composition", initial: "closed"})
      .sidebar__expandable
        +expandable-checkbox({title:"дополнительные удобства"})
