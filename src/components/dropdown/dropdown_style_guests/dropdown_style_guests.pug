include ../../text-button/text-button

mixin dropdown_style_guests(title, initial = "closed")
  h3.iqdropdown__title=title
  div(class = "iqdropdown iqdropdown_guests" data-initial = initial)
    .iqdropdown__expand
      |expand_more
    p.iqdropdown__selection
    .iqdropdown__menu
      div(class="iqdropdown__menu__option" data-id="item1")
        h3.iqdropdown-item
          |Взрослые
      div(class="iqdropdown__menu__option" data-id="item2")
        h3.iqdropdown-item
          |Дети
      div(class="iqdropdown__menu__option" data-id="item3")
        h3.iqdropdown-item
          |Младенцы
      .iqdropdown__buttons
        .iqdropdown__set
          +text-button('применить')
        .iqdropdown__clear
          +text-button('очистить')
