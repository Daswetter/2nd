mixin dropdown_style_rooms
  div(class="iqdropdown iqdropdown_rooms")
    div(class="iqdropdown-expand")
        |expand_more
    p(class="iqdropdown-selection")
    div(class="iqdropdown-menu")
      div(class="iqdropdown-menu-option" data-id="item1")
        h3(class="iqdropdown-item")
          |Спальни
      div(class="iqdropdown-menu-option" data-id="item2")
        h3(class="iqdropdown-item")
          |Кровати
      div(class="iqdropdown-menu-option" data-id="item3")
        h3(class="iqdropdown-item")
          |Ванные комнаты