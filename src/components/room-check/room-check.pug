include ../button/button
include ../info-icon/info-icon
include ../room-title/room-title
include ../calendar/calendar_separate/calendar_separate
include ../dropdown/dropdown_style_guests/dropdown_style_guests

mixin room-check
  .room-check
    .room-check__room-title
      +room-title({large:true,number:888,lux:true,price:'9 990'})
    .room-check__date-fields
      +calendar
    h3.room-check__block-title.
      гости
    .room-check__dropdown
      +dropdown_style_guests

    .room-check__details
      .room-check__line
        .room-check_text.
          9 990₽ х 4 суток
        |39 960₽

      .room-check__line
        .room-check_text
          |Сбор за услуги: скидка 2&nbsp179₽
          +info-icon
        |0₽

      .room-check__line
        .room-check_text
          |Сбор за дополнительные услуги
          +info-icon
        |300₽

    .room-check__final-price
      h2.
        Итого
      .room-check__dashed-line
      h2.
        38&nbsp081₽
    +button({type: 'arrow', title: 'забронировать'})