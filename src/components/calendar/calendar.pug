mixin calendar(options)
  form
    if options.type === "separate"
      .calendar_type_separate
        .calendar__block
          h3.calendar__title=options.title
          .calendar__input
            input(type="text" class="calendar__start js-calendar__start", placeholder="ДД.ММ.ГГГГ")
            .calendar__expand.js-calendar__expand 
              |expand_more
        .calendar__block
          h3.calendar__title=options.titleExtra
          .calendar__input
            input(type="text" class="calendar__end js-calendar__end", placeholder="ДД.ММ.ГГГГ")
            .calendar__expand.js-calendar__expand 
              |expand_more

    if options.type === "filter"
      .calendar_type_filter
        h3.calendar__title=options.title
        .calendar__input
          input(type="text" class="calendar__filter-input js-calendar__filter-input")
          .calendar__expand.js-calendar__expand
            |expand_more

    if options.type === "constant"
      div(class="js-calendar_type_constant")

