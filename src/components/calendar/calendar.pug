mixin calendar(type, titleStart = "", titleEnd = "")
  form
    if type === "separate"
      .calendar_separate
        .calendar__block
          h3.calendar__title=titleStart
          .calendar__input
            input(type="text" class="calendar__start js-calendar__start", placeholder="ДД.ММ.ГГГГ")
            .calendar__expand.js-calendar__expand 
              |expand_more
        .calendar__block
          h3.calendar__title=titleEnd
          .calendar__input
            input(type="text" class="calendar__end js-calendar__end", placeholder="ДД.ММ.ГГГГ")
            .calendar__expand.js-calendar__expand 
              |expand_more

    if type === "filter"
      .calendar_filter
      h3.calendar__title=titleStart
      .calendar__input
        input(type="text" class="calendar__filter-input js-calendar__filter-input")
        .calendar__expand.js-calendar__expand
          |expand_more

    if type === "constant"
      div(class="js-calendar_constant")

