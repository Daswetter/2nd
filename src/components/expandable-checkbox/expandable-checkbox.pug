include ../checkbox-button/checkbox-button

mixin expandable-checkbox(options)
  .expandable-checkbox
    label(class="expandable-checkbox__label" type="checkbox" )
      h3.expandable-checkbox__label-title=options.title
      input(class="expandable-checkbox__input" type="checkbox" checked=options.condition)
      span.expandable-checkbox__icon
        |expand_more

      ul.expandable-checkbox__list
        li.expandable-checkbox__li
          +checkbox-button({rich: false, title: "Завтрак", checked: false})

        li.expandable-checkbox__li
          +checkbox-button({rich: false, title: "Письменный стол", checked: true})

        li.expandable-checkbox__li
          +checkbox-button({rich: false, title: "Стул для кормления", checked: true})

        li.expandable-checkbox__li
          +checkbox-button({rich: false, title: "Кроватка", checked: true})

        li.expandable-checkbox__li
          +checkbox-button({rich: false, title: "Телевизор", checked: false})

        li.expandable-checkbox__li
          +checkbox-button({rich: false, title: "Шампунь", checked: false})
