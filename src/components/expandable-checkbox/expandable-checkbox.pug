include ../checkbox-button/checkbox-button

mixin expandable-checkbox({title, initial = "closed", items})
  .expandable-checkbox.js-expandable-checkbox
    div(class = "expandable-checkbox__label js-expandable-checkbox__label", data-initial=initial)
      h3.expandable-checkbox__title=title
      span.expandable-checkbox__icon.js-expandable-checkbox__icon
        |expand_more

    ul.expandable-checkbox__list.js-expandable-checkbox__list
      each checked, item in items
        li.expandable-checkbox__li
          +checkbox-button({ rich: false, major: item, checked: checked })
