mixin radio-button(title = '')
  if title
    h3.radio-button__major-title=title
  .radio-button__inputs-wrapper
    label(class='radio-button__label')
      span.radio-button__title
        |Мужчина
      input(class='radio-button__input', type='radio',name = 'gender', checked)
    label(class='radio-button__label')
      span.radio-button__title
        |Женщина
      input(class='radio-button__input', type='radio',name = 'gender')  

