include ../like-button/like-button

mixin comment(options)
  .comment
    .comment__user
      img(src = '../../src/components/comment/img/' + options.img, alt = 'photo' class='comment__photo')
      .comment__user-info
        .comment__name=options.name
        .comment__when=options.when+' '+'назад'
    .comment__review
      .comment__like
        +like-button
      p.comment__text=options.text

