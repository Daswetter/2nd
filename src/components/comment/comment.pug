mixin comment(options)
  .comment
    .comment__user
      img(src=options.img, alt="photo" class="comment__photo" width="48")
      .comment__user-info
        .comment__name=options.name
        .comment__when=options.when+' '+'назад'
    .comment__review
      .comment__like
        include ../like-button/like-button
      p.comment__text=options.text

