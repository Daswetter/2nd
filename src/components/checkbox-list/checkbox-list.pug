include ../checkbox-button/checkbox-button

mixin checkbox-list(options)
  .checkbox-list
    h3.checkbox-list__title=options.title
    .checkbox-list__item
      +checkbox-button({rich: false, title: "Можно курить", checked: false})
    .checkbox-list__item
      +checkbox-button({rich: false, title: "Можно с питомцами", checked: true})
    .checkbox-list__item
      +checkbox-button({rich: false, title: "Можно пригласить гостей (до 10 человек)", checked: true})
